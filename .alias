#!/usr/bin/env bash

if [ $(uname -s) = "Darwin" ]; then
    alias ls='ls --color=auto'
    alias ll='ls -al'
else
    open () {
        xdg-open $1
    }
    export -f open
fi

flake8_ignore () {
    flake8 --ignore "E124,E128,E201,E203,E241,E402,W503" $1
}

export -f flake8_ignore
alias csvlook="csvlook -d ';' --no-inference"
